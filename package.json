{
  "name": "@gyoridavid/circuit-breaker",
  "version": "1.0.0",
  "description": "Simple circuit breaker, port of gobreaker written in typescript",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "coverage": "npx codecov",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gyoridavid/circuit-breaker.git"
  },
  "keywords": [
    "circuit-breaker",
    "gobreaker",
    "circuitbreaker",
    "circuit breaker",
    "cbreaker"
  ],
  "author": "David Gyori",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/gyoridavid/circuit-breaker/issues"
  },
  "homepage": "https://github.com/gyoridavid/circuit-breaker#readme",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.173",
    "jest": "^27.2.0",
    "lodash": "^4.17.21",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.3"
  },
  "files": [
    "lib/**/*"
  ]
}
